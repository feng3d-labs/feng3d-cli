{
  "name": "feng3d-cli",
  "version": "0.0.11",
  "description": "feng3d 项目通用标准，包含代码规范、配置模板和 CLI 工具",
  "homepage": "https://feng3d.com/feng3d-cli/",
  "author": "feng",
  "license": "MIT",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "module": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "bin": {
    "feng3d-cli": "./bin/cli.js"
  },
  "scripts": {
    "clean": "rimraf lib dist public",
    "build": "vite build && tsc",
    "watch": "concurrently \"vite build --watch\" \"tsc -w\" \"vitest\"",
    "test": "vitest run",
    "lint": "eslint . --ext .js,.ts --max-warnings 0",
    "lintfix": "npm run lint -- --fix",
    "docs": "typedoc",
    "prepublishOnly": "node scripts/prepublish.js",
    "release": "npm run clean && npm run lint && npm test && npm run build && npm run docs && npm publish",
    "postpublish": "node scripts/postpublish.js",
    "prepare": "husky",
    "update": "npm run build && node bin/cli.js update && npm install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/feng3d-labs/feng3d-cli.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin",
    "dist",
    "lib",
    "templates"
  ],
  "devDependencies": {
    "@eslint/js": "9.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "8.32.1",
    "@typescript-eslint/parser": "8.32.1",
    "eslint": "9.26.0",
    "globals": "14.0.0",
    "husky": "9.1.7",
    "lint-staged": "15.2.10",
    "rimraf": "6.0.1",
    "tslib": "2.8.1",
    "typedoc": "0.28.4",
    "typescript": "5.8.3",
    "typescript-eslint": "8.32.1",
    "vite": "6.3.5",
    "vitest": "3.1.3",
    "cross-env": "7.0.3",
    "concurrently": "9.1.2"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --max-warnings 0"
    ]
  }
}
